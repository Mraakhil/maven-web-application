pipeline {
    agent any

    tools {
        maven 'Maven3.8.2' // Name must match Global Tool Configuration
    }

    environment {
        SONARQUBE = 'MySonarQubeServer' // Name configured under Manage Jenkins > Configure System > SonarQube Servers
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/Mraakhil/maven-web-application.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('SonarQube Analysis') {
            steps {
               
                    cd <sonarqube-dir>/bin/linux-x86-64./sonar.sh start

                }
            }
        
    }
}
